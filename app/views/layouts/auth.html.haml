- content_for :content do
  .container
    .logo-container
      %h1
        = link_to root_path do
          = image_tag 'logo.png'
          %small= Rails.configuration.x.local_domain

    .form-container
      - if flash[:notice]
        .flash-message.notice= flash[:notice]

      - if flash[:alert]
        .flash-message.alert= flash[:alert]

      = yield

= render template: "layouts/application"
